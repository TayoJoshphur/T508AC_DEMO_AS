<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linear1"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logo"
            android:contentDescription="@string/todo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/independent_national"
                android:textColor="#006533"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/electoral_commission"
                android:layout_toRightOf="@id/textView"
                android:textColor="#006533"
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:background="#E1F4E6"
        android:layout_marginBottom="20dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="1265dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/nigeria_general_elections"
            android:textColor="#636363"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_cardids"
            android:layout_width="221dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        android:layout_below="@+id/relative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/textView5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/scan_your_voters_card_to_begin"
                android:textColor="#006533"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_nfc_icon"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#E8E8E8"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                >
                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/polling_unit_area_1_sect_1_area_1_pri_sch"
                    android:textColor="#3E3E3E"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/city_center_abuja_municipal_federal_capital_territory"
                    android:layout_toRightOf="@id/textView"
                    android:textColor="#3E3E3E"
                    android:textSize="20sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#E1F4E6">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_setting_icon"
                    android:contentDescription="TODO"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>